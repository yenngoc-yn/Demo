
    internal class Node
    {
        public int Data;
        public Node Next;
        public Node(int d) { Data = d; Next = null; }
    }
}
internal class LinkedList
    {
        private Node head;

        public void AddLast(int data)
        {
            Node n = new Node(data);
            if (head == null) { head = n; return; }
            Node cur = head;
            while (cur.Next != null) cur = cur.Next;
            cur.Next = n;
        }

        public void Reverse()
        {
            Node prev = null, current = head, next = null;
            while (current != null)
            {
                next = current.Next;
                current.Next = prev;
                prev = current;
                current = next;
            }
            head = prev;
        }

        public void Display()
        {
            Node cur = head;
            while (cur != null)
            {
                Console.Write(cur.Data + " -> ");
                cur = cur.Next;
            }
            Console.WriteLine("null");
        }
    }
}
internal class Program
    { 
            static void Main()
            {
                LinkedList list = new LinkedList();
                list.AddLast(1);
                list.AddLast(2);
                list.AddLast(3);
                list.AddLast(4);

                Console.WriteLine("Trước khi đảo:");
                list.Display();

                list.Reverse();

                Console.WriteLine("Sau khi đảo:");
                list.Display();
            }
        
    }
}
